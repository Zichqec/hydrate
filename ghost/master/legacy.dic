HourNotification
{
	if hour == 0
	{
		"\0\s[0](It's midnight.)"
	}
	elseif hour == 12
	{
		"\0\s[0](It's noon. If you haven't eaten yet,\w4 you should sip some water first.)"
	}
	else
	{
		"\0\s[0](It's %(hour12).)"
	}
	--
	"\_w[3000]" //Here for the occasions where it also switches shells
}

//Doesn't notify every minute anymore but I think that's for the best
OnOffscreen
{
	if Config.OffscreenDialogue && "0" _in_ reference.raw[0]
	{
		"\0\s[0](To continue hydrating, press Ctrl Shift F12.)"
	}
}

